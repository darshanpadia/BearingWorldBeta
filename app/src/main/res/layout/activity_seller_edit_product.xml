<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SellerEditProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/SellerEditProductImg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="start|left"
                    android:layout_margin="15dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSellerRemoveProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:background="#F44336"
                        android:text="Remove Product"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnSellerEditSelectImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:background="#2196F3"
                        android:text="Choose Image"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/SellerEditProductNameTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Product Name:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/SellerEditProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Product Name"
                android:inputType="text|textCapSentences" />

            <TextView
                android:id="@+id/SellerEditProductCostTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Cost:"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SellerEditCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Product Cost"
                    android:inputType="number|text" />

                <TextView
                    android:id="@+id/SellerEditRupeesTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹"
                    android:textColor="#F44336"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/SellerEditProductDescTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Description:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/SellerEditProductDesc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Enter Product Description"
                android:inputType="text" />

            <TextView
                android:id="@+id/SellerEditProductStockTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Stock:"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSellerEditDecreaseStock"
                    android:layout_width="50dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/SellerEditProductStock"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="1" />

                <Button
                    android:id="@+id/btnSellerEditIncreaseStock"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSellerEditSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="#2196F3"
                android:text="Save"
                android:textColor="#FFFFFF" />

            \

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>